<% if flash[:notice] %>
<div class="alert alert-primary alert-dismissible" role="alert">
  <%= flash[:notice] %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>

<% if flash[:alert] %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <%= flash[:alert] %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>